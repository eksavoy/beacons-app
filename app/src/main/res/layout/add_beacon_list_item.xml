<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:weightSum="1"
    android:id="@+id/layout_add_beacon_list_item">

    <android.support.v7.widget.CardView
        android:id="@+id/add_beacon_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_btn_add_beacon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/layout_bluethoot_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layout_btn_add_beacon">

                <TextView
                    android:id="@+id/fixe_bluetoothName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Bluetooth Name : "
                    android:textColor="@color/cardview_light_background"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/add_beacon_bluetooth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/fixe_bluetoothName"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="30sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_bluetooth_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_bluethoot_name"
                android:layout_toRightOf="@+id/layout_btn_add_beacon">

                <TextView
                    android:id="@+id/fixe_bluetoothAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Bluetooth Address : "
                    android:textColor="@color/cardview_light_background" />

                <TextView
                    android:id="@+id/add_beacon_bluetooth_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fixe_bluetoothAddress"
                    android:textColor="@color/cardview_light_background" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>